{
  "name": "vai-studio",
  "version": "3.0.0",
  "description": "VAI Studio - Test and compare Speech-to-Text models locally",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "./scripts/prepare-python-bundle.sh",
    "build": "npm run prebuild && electron-builder",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "build:all": "npm run prebuild && electron-builder --mac --win --linux"
  },
  "keywords": [
    "speech-to-text",
    "whisper",
    "voxtral",
    "transcription",
    "electron",
    "ai",
    "stt",
    "transcription-tool"
  ],
  "author": "VAI Studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vai-studio"
  },
  "build": {
    "appId": "com.vaistudio.app",
    "productName": "VAI Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "backends/**/*.py",
      "!backends/__pycache__",
      "!backends/*.pyc",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backends-bundle",
        "to": "backends",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/*.pyo"
        ]
      },
      {
        "from": "test_audio.wav",
        "to": "test_audio.wav"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "yourusername",
      "repo": "vai-studio"
    }
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  }
}
